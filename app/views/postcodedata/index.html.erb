<p id="notice"><%= notice %></p>

<div class="container">
<h1>Postcodedata</h1>



<div class="container">


<h3>Poscode File Import </h3>
<%= form_tag import_postcodedata_path, multipart: true do %>
  <%= file_field_tag :file %>
<br>
  <%= submit_tag "Upload" %>

<% end %>

</div>
<br>
<div class="container">
  <%= link_to 'Download', "/postcodedata.csv", :class=>"btn btn-success" %>
  <%= link_to 'Home', root_path, :class=>"btn btn-default" %>
</div>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Row_ID</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postcodedata.each do |postcodedatum| %>
      <tr>
        <td><%= postcodedatum.row_id %></td>
        <td><%= postcodedatum.postcode %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
