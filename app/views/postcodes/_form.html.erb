<%= form_for(postcode) do |f| %>
  <% if postcode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(postcode.errors.count, "Error") %></h2>

      <ul>
      <% postcode.errors.full_messages.each do |message| %>
        <li><h3><%= message %></h3></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>

<div class="container">

  <div class="field">
    <h3><%= f.label :postcode %>
    <%= f.text_field :postcode %></h3>
  </div>


<br>
  <div class="actions">
  <%= f.submit 'Validate', :class=>"btn btn-warning"%>
  </div>

</div>
<% end %>
