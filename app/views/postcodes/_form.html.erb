<%= form_for(postcode) do |f| %>
  <% if postcode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(postcode.errors.count, "Error") %></h2>

      <ul>
      <% postcode.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
