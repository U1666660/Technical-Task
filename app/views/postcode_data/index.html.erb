<p id="notice"><%= notice %></p>


<div class="container">
  <h1>Postcode Data</h1>
  <table class="table table-hover">


  <thead>
    <tr>
      <th>row_id</th>
      <th>postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postcode_data.each do |postcode_datum| %>
      <tr>
        <td><%= postcode_datum.row_id %></td>
        <td><%= postcode_datum.postcode %></td>


      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<div class="text-center">
<p><%= will_paginate @postcode_data %></p>
</div>

<div class="container">
  <button type="button" class="btn btn-success"><%= link_to 'Validate', new_postcode_datum_path, style: 'color: white' %></button>
</div>
